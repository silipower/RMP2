<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotebookApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Цвета для светлой темы -->
            <Color x:Key="LightBackgroundColor">#FFFFFF</Color>
            <Color x:Key="LightTextColor">#000000</Color>
            <Color x:Key="LightIconColor">#000000</Color>

            <!-- Цвета для темной темы -->
            <Color x:Key="DarkBackgroundColor">#000000</Color>
            <Color x:Key="DarkTextColor">#FFFFFF</Color>
            <Color x:Key="DarkIconColor">#FFFFFF</Color>
            
            <!-- Динамические ресурсы для текущей темы -->
            <Color x:Key="PageBackgroundColor">#FFFFFF</Color>
            <Color x:Key="TextColor">#000000</Color>
            <Color x:Key="IconColor">#000000</Color>

            <!-- Ресурсы для иконки кнопки в разных темах --> 
            <Color x:Key="SettingsButtonColorLight">Black</Color>
            <Color x:Key="SettingsButtonColorDark">White</Color>
            <Color x:Key="SettingsButtonColorContrast">White</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>
